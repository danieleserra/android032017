<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pattern" >



    <ImageView

        android:id="@+id/pattern_editing_note_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/patter_white"
        android:layout_marginTop="-10dp"
        android:rotation="-1"
        android:adjustViewBounds="true"
        android:background="@android:drawable/dialog_holo_light_frame"/>

    <EditText
        android:id="@+id/show_memo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="27/01/17   h. 10:38"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="43dp"
        android:rotation="-1" />

    <EditText
        android:id="@+id/show_memo_body"
        android:layout_width="333dp"
        android:layout_height="wrap_content"

        android:inputType="textPersonName"
        android:text="Lorem ipsum dolor sit t rutrum id, ultricies et urna. N."
        android:layout_marginTop="59dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_below="@+id/pattern_editing_note_white"
        android:maxEms="4"
        android:maxWidth="333dp"
        android:textAlignment="center"
        android:scrollHorizontally="false"
        android:ellipsize="none"

        />


</RelativeLayout>