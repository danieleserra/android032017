<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/pattern" >



    <ImageView

        android:id="@+id/pattern_editing_note_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/patter_white"
        android:layout_marginTop="-10dp"
        android:rotation="-1"
        android:adjustViewBounds="true"
        android:background="@android:drawable/dialog_holo_light_frame"/>

    <TextView
        android:id="@+id/show_memo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="27/01/17   h. 10:38"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="43dp"
        android:textAlignment="center"
        android:rotation="-2"
        android:textColor="#444444"
        android:textSize="21dp" />

    <EditText
        android:id="@+id/show_memo_body"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"

        android:text="L."
        android:layout_marginTop="75dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:inputType="textMultiLine"

        android:layout_below="@+id/pattern_editing_note_white"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/show_memo_title"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"

        android:background="@android:color/transparent"
        android:text="Titolo in rosso "
        android:layout_marginTop="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:textColor="#ff5300"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_below="@+id/pattern_editing_note_white"
        android:layout_centerHorizontal="true" />


</RelativeLayout>